CFLAGS = @CFLAGS@ -I../CommonLib/include
.c.o:
	@CC@ $(CFLAGS) $< -o $@

LIB = libCommon

SOURCES = \
	./Debug/Debug.c \
	./Memory/Memory.c \
	./Object/Object.c \
	./ObjectMgr/ObjectMgr.c \
	./List/List.c \
	./String/String2.c \
	./Map/Map.c \
	./Map/MapEntry.c \
	./BTree/BTree.c \
	./BTree/Node.c \
	./Error/Error.c

HEADERS = ./Types/Types.h ./Object/Class.h $(SOURCES:.c=.h)

OBJECTS = $(SOURCES:.c=.o)

all: include libCommon.a

libCommon.a: $(OBJECTS)

	@MAKELIB@ $(OBJECTS)
	@RANLIB@ $@

include:
	mkdir -p include
	for f in $(HEADERS); do \
	    ln -sf .$$f -t include; \
	done
	
clean:
	@CLEAN@ include $(OBJECTS) libCommon.a

.PHONY: clean all
