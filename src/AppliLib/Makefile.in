CFLAGS = @CFLAGS@ -I./include -I../CommonLib/include
%.o: %.c
	@CC@ $(CFLAGS) $< -o $@

LIB = libAppli

SOURCES = \
	./FileMgr/FileMgr.c \
	./FileMgr/FileDesc.c \
	./OptionMgr/OptionMgr.c \
	./TimeMgr/TimeMgr.c \
	./TimeMgr/Timer.c \
	./SdbMgr/SdbMgr.c \
	./SdbMgr/SdbRequest.c \
	./TaskMgr/TaskMgr.c

HEADERS = $(SOURCES:.c=.h)

OBJECTS = $(SOURCES:.c=.o)

all: include libAppli.a

libAppli.a: $(OBJECTS)
	@MAKELIB@ $(OBJECTS)
	@RANLIB@ $@

include:
	mkdir -p include
	for f in $(HEADERS); do \
	    ln -sf .$$f -t include; \
	done
	
clean:
	@CLEAN@ include $(OBJECTS) libAppli.a

distclean:
	@CLEAN@ Makefile

.PHONY: clean all
